<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto"
              android:layout_width = "match_parent"
              android:orientation="horizontal"
              android:gravity="right"
              android:layout_height = "match_parent" >
    <ImageView android:layout_width = "5dp"
               android:alpha="0.5"
               android:id="@+id/android_base_imgShadow"
               android:background="@drawable/android_base_shadow_left"
               android:layout_height = "match_parent" />

    <ScrollView android:layout_width = "wrap_content"
                android:id="@+id/android_base_menuScrollView"
                android:layout_height = "match_parent" >
        <LinearLayout
            android:id="@+id/android_base_llMenuContainer"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content" >

        </LinearLayout >

    </ScrollView >



</LinearLayout >