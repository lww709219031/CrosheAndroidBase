<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android = "http://schemas.android.com/apk/res/android"
             android:layout_width = "match_parent"
             android:layout_height = "match_parent"
             android:orientation = "vertical" >
    <ImageView
        android:id = "@+id/imageView"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:scaleType = "centerCrop"
        android:src = "@drawable/android_base_default_img" />


    <LinearLayout
        android:id = "@+id/llVideoContainer"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_gravity = "bottom"
        android:background = "#99000000"
        android:gravity = "center_vertical"
        android:padding = "3dp" >

        <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:src = "@drawable/android_base_ic_album_video" />
        <TextView android:id = "@+id/tvVideoTime"
                  android:layout_width = "wrap_content"
                  android:layout_height = "wrap_content"
                  android:layout_marginLeft = "10dp"
                  android:text = "10:10"
                  android:textColor = "#fff" />
    </LinearLayout >


    <LinearLayout
        android:id = "@+id/llGifContainer"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_gravity = "bottom"
        android:background = "#99000000"
        android:gravity = "center_vertical"
        android:padding = "3dp" >

        <ImageView
            android:layout_width = "24dp"
            android:layout_height = "wrap_content"
            android:src = "@drawable/android_base_ic_album_gif" />
    </LinearLayout >

    <FrameLayout
        android:id="@+id/android_base_flChoose"
        android:visibility="invisible"
        android:layout_width = "match_parent"
        android:background="#bb000000"
        android:layout_height = "match_parent" >

        <ImageView android:layout_width = "25dp"
                   android:layout_gravity="right"
                   android:layout_margin="10dp"
                   android:tint="@color/colorPrimary"
                   android:src="@drawable/android_base_icon_choose"
                   android:layout_height = "25dp" />
    </FrameLayout >

</FrameLayout >